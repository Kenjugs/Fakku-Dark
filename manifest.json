{
  "manifest_version": 2,
  "name": "Fakku After Dark",
  "version": "1.3",
  "description": "Replaces the default theme on Fakku with a dark theme",
  "applications": {
    "gecko": {
      "update_url": "https://raw.githubusercontent.com/Kenjugs/Fakku-Dark/master/updates.json"
    }
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.fakku.net/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "fakkuDark_style.css",
    "fakkuDark_reader.min.css"
  ]
}
